extends layout

block content
	div.container
		div.form-group
			form.form-control(method='post' action='/users/new')
				fieldset
					legend.text-center Register User
					br
					input.form-control.col-12(type='text' name='firstname' placeholder='First Name' value='#{person.firstname}')
					br
					input.form-control.col-12(type='text' name='lastname' placeholder='Last Name' value='#{person.lastname}')
					br
					input.form-control.col-12(type='email' name='email' placeholder='Email Address' value='#{person.email}')
					br
					input.form-control.col-12(type='text' name='username' placeholder='Username' value='#{person.username}' disabled)= person.username
					br
					input.form-control.col-12#passw(type='password' name='password' placeholder='Password' required)
					br
					span#message.alert.alert-danger(hidden)
					input.form-control.col-12#confpass(type='password' placeholder='Confirm Password' onchange='checkpass()' required)
					br
					select.form-control(name='role' required)
						option(value='') Role (Choose One)
						option(value='Doctor') Doctor
						option(value='Nurse') Nurse
						option(value='Hospital Administrator') Hospital Administrator (Front Desk, Records, Finance)
						option(value='Pharmacist') Pharmacist
						option(value='Lab Technician') Lab Technician
						option(value='IT Administrator') IT Administrator
					br
					input.form-control.col-12.btn.btn-primary(type='submit' value='Update User')

		br

	script.
		var use = '#{user.username}'.toString()
	script(src='/javascripts/login.js')
	script(src='/javascripts/newuser.js')