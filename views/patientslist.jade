extends layout

block content

  div.container
    div.row
      table.table-striped.table-bodered.col-10.m-auto
        thead.thead-dark
          tr
            th Patient Name
            th Hospital ID
            th Action
            th Action
            th Action
            th Action
            th Action
        tbody
        each patient in patientlist
          tr
            td= patient.firstname + ' ' + patient.lastname
            td= patient.patient_id
            td
              form
                button.btn.btn-sm.btn-secondary(type='submit' formaction='/consultationlist/frontdesk/#{patient.patient_id}', formmethod='post') Send to Nurses
            td
              form
                button.btn.btn-sm.btn-secondary(type='submit' formaction='/consultationlist/nurses/#{patient.patient_id}', formmethod='post') Send to Doctors
            td
              a.btn.btn-sm.btn-primary(href='/patients/#{patient.patient_id}/record_payment') Record Payment
            td
              a.btn.btn-sm.btn-primary(href="/patients/#{patient.patient_id}") View Details
            td
              a.btn.btn-sm.btn-primary(href="/patients/#{patient.patient_id}/update") Edit Details

  script.
    var use = '#{user.username}'.toString()

  script(src='/javascripts/login.js')
