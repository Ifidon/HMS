extends layout

block content

  div.container
    div.row
      table.table-striped.table-bodered.col-10.m-auto
        thead.thead-dark
          tr
            th Patient Name
            th Hospital ID
            th Action
        tbody
        each patient in patientlist
          tr
            td= patient.firstname + ' ' + patient.lastname
            td= patient.patient_id
            td
              a.btn.btn-primary(href="/patients/#{patient.patient_id}/consultations") Show Consultations

    script.
      var use = '#{user.username}'.toString()
    
    script(src='/javascripts/login.js')
