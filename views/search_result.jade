extends layout

block content

  div.container
    div.row
      each patient in patientlist
        div.row
          img.img-thumbnail.d-none.d-md-block.col-4(src="data: #{patient.picture.contentType};base64, #{patient.picture.data.toString('base64')}")
          div.col-12.col-md-6.mt-auto
            h1.col-12= patient.firstname + ' ' + patient.lastname
            p.col-12= "Address: " + patient.address
            p#id.col-12= "Hospital ID: " + patient.patient_id
            div.row
              form#viewform.col-5.mr-auto(method="get" action="/patients/#{patient.patient_id}")
                button#viewDetails.btn.btn-primary(type='submit') View Details
              form#editform.col-5.ml-auto(method="get", action="/patients/#{patient.patient_id}/update")
                button#editDetails.btn.btn-primary(type='submit') Edit Details
        hr
        br
        br
    br

    footer
