extends layout

block content
    div.container
        div.row
            form.form-control.bg-light(method="post", action='/patients/registration' enctype='multipart/form-data')
              h3.text-center Patient Registration Form
              br
              br

              fieldset
                legend.text-center Personal Details
                br

                label(for="patient_id") Hospital Number:
                input#patient_id.form-control.col-3(type="text" name="patient_id" required)
                br

                label(for="passport") Passport Photograph:
                input#passport.form-control(type="file" name="passport")
                br

                label(for="firstname") First Name:
                input#firstname.form-control(type="string" name="firstname" required)
                br

                label(for="lastname") Last Name:
                input#lastname.form-control(type="string" name="lastname" required)
                br
                br
                label(for="dob") Date of Birth (MM/DD/YYYY):
                input#dob.form-control(type="date" name="dob" required)
                br

              fieldset
                legend.text-center Contact Details
                br

                label(for="address") Contact Address:
                textarea#address.form-control.col-5(name="address" rows="5" cols="27" required)
                br

                label(for="email") Email Address:
                input#email.form-control(type="email" name="email")
                br

                label(for="phone") Phone Number:
                input#phone.form-control(type="phone" name="phone")
                br
                br

              fieldset.bg-light
                legend.text-center Next of Kin Details (Emergency Contact)
                br

                label(for="nokName") Full Name of Next of Kin:
                input#nokName.form-control(type="float" name="nokName" required)
                br

                label(for="nokAddress") Address of Next of Kin:
                textarea#nokAddress.form-control.col-5(name="nokAddress" rows=5)
                br

                label(for="nokPhone") Phone Number of Next of Kin:
                input#nokPhone.form-control(type="bloodgroup" name="nokPhone")
                br

                label(for="nokRelationship") Relationship with Next of Kin:
                input#nokRelationship.form-control(type="string" name="nokRelationship")
                br

              input#submit.btn.btn-primary.form-control(type="submit" value="Register" name="submit")

        br
    
    script.
        var last = #{ids[ids.length - 1]};
        var k = #{ids[0]}
    
    script.
        var use = '#{user.username}'.toString()
    script(src='/javascripts/login.js')
    script(src='/javascripts/registration.js')